<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_parentPanel"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:background="@drawable/sp_alert_bgr"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/rl_topPanel"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/sp_alert_title_bgr"
        android:padding="5dp">

        <ImageView
            android:id="@+id/iv_icon"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:lines="1"
            android:textColor="@android:color/white"
            android:textSize="18sp" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_alertContent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:minHeight="100dp">

        <TextView
            android:id="@+id/tv_contentText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="start|center_vertical"
            android:minHeight="50dp"
            android:textColor="@android:color/black"
            android:textSize="16sp" />

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/ll_buttonPanel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="5dp">

        <Button
            android:id="@+id/btn_negative"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:background="@drawable/slt_btn_bgr"
            android:gravity="center"
            android:text="@string/button_cancel"
            android:textColor="#FF9F9F9F"
            android:textSize="16sp" />

        <Button
            android:id="@+id/btn_positive"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:background="@drawable/slt_btn_bgr"
            android:gravity="center"
            android:text="@string/button_ok"
            android:textColor="@color/alertDialogPrimary"
            android:textSize="16sp" />
    </LinearLayout>

</LinearLayout>