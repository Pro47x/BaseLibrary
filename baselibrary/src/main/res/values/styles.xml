<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="BaseLibrary.Dialog" parent="@android:style/Theme.Dialog">
        <!--边框-->
        <item name="android:windowFrame">@null</item>
        <!--浮在activity上-->
        <item name="android:windowIsFloating">true</item>

        <item name="android:windowIsTranslucent">true</item>
        <!--背景透明-->
        <item name="android:windowBackground">@android:color/transparent</item>
        <!--背景模糊-->
        <item name="android:backgroundDimEnabled">true</item>
        <!--无标题-->
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="BaseLibrary.Dialog.Animation" />

    <style name="BaseLibrary.Dialog.Animation.FromBottom">
        <item name="android:windowEnterAnimation">@anim/dialog_from_bottom_in</item>
        <item name="android:windowExitAnimation">@anim/dialog_from_bottom_out</item>

    </style>

    <style name="BaseLibrary.Dialog.Animation.Default">
        <item name="android:windowEnterAnimation">@anim/dialog_default_in</item>
        <item name="android:windowExitAnimation">@anim/dialog_default_out</item>
    </style>


</resources>